{
    "$schema": "https://raw.githubusercontent.com/invoiceradar/plugins/main/schema.json",
    "id": "a1-business",
    "homepage": "https://www.a1.net/business",
  "name": "A1 Business",
  "description": "A1 Business Portal",
  "configSchema": {
    "contract": {
      "type": "string",
      "title": "Contract",
      "description": "The contract to use"
    }
  },
  "checkAuth": [
    {
        "action": "navigate",
        "url": "https://obp.a1.net/",
        "waitForNetworkIdle": true
    },
    {
        "action": "checkURL",
        "url": "https://obp.a1.net"
    }
  ],
  "startAuth": [
    {
        "action": "navigate",
        "url": "https://obp.a1.net/",
        "waitForNetworkIdle": true
    },
    {
        "action": "waitForURL",
        "url": "https://obp.a1.net/"
    }
  ],
  "getDocuments": [
    {
      "action": "navigate",
      "url": "https://obp.a1.net/"
    },
    {
      "action": "waitForElement",
      "selector": ".contract-link[title='{{config.contract}}']"
    },
    {
      "action": "click",
      "selector": ".contract-link[title='{{config.contract}}']"
    },
    {
      "action": "waitForNetworkIdle",
      "timeout": 30000
    },
    {
      "action": "waitForElement",
      "selector": "div.table-body"
    },
    {
      "action": "extractAll",
      "selector": ".table-bill-list .table-body .table-row",
      "forEach": [
        {
            "action": "downloadPdf",
            "url": "https://obp.a1.net/bill/download/{{item.downloadUrl}}",
            "document": {
              "id": "{{item.invoiceNumber}}",
              "date": "{{item.dateRange}}",
              "total": "{{item.amount}}"
            }
        }
      ],
      "fields": {
        "dateRange": ".period-title",
        "amount": ".bill-amount",
        "status": ".bill-status",
        "invoiceNumber": ".billing-number",
        "downloadUrl": {
          "selector": ".icon-rechnung",
          "attribute": "onclick",
          "transform": "(v) => { const match = v.match(/\\/maxbill\\/pdf\\/.*?(?='|\")/); return match ? match[0] : ''; }"
        }
      }
    }
  ],
  "getConfigOptions": [
    {
        "action": "navigate",
        "url": "https://obp.a1.net/"
    },
    {
      "action": "waitForElement",
      "selector": ".contract-info"
    },
    {
        "action": "extractAll",
        "selector": ".contract-info",
        "forEach": [
            {
                "action": "exposeOption",
                "config": "contract",
                "option": {
                    "label": "{{item.title}}",
                    "value": "{{item.title}}"
                }
            }
        ],
        "fields": {
          "title": {
            "selector": ".contract-link",
            "attribute": "title"
          }
        }
    },
    {
        "action": "promptOptionSelection",
        "config": "contract"
    }
  ]
}